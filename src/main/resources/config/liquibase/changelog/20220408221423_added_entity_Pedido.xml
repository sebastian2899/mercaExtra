    <!--
        Added the entity Pedido.
    -->
    <changeSet id="20220408221423-1" author="jhipster">
        <createTable tableName="pedido">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fecha_pedido" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="direccion" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="estado" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="info_domicilio" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="id_domiciliario" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="id_notificacion" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="id_factura" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="user_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
             <column name="hora_despacho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="pedido" columnName="fecha_pedido" columnDataType="${datetimeType}"/>
    </changeSet>

